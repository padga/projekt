{% extends 'base.html.twig' %}


{% block title %}
    {{ 'title.role_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div id="container">
        <h2>{{ 'title.role_edit'|trans }}</h2>
        {% include 'default/_form.html.twig' with {
            page_title: 'title.role_edit',
            page_title_param: {'%id%': user.id},
            attr: {
                method: 'PUT',
                action: url('role_edit', {'id': user.id}),
            },
            back_to_list_path: 'users_index',
        } %}
    </div>
{% endblock %}