{% extends 'base.html.twig' %}


{% block title %}
    {{ 'title.password_change'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div id="container">
        <h2>{{ 'title.password_change'|trans }}</h2>

    {% include 'default/_form.html.twig' with {
        page_title: 'title.password_change',
        page_title_param: {'%id%': user.id},
        attr: {
            method: 'PUT',
            action: url('password_change', {'id': user.id}),
        },
        back_to_list_path: 'users_index',
    } %}
    </div>
{% endblock %}