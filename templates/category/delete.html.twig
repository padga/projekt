{% block title %}
    {{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    {% include 'default/_form.html.twig' with {
        page_title: 'title.category_delete',
        page_title_param: {'%id%': category.id},
